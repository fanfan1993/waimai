page{
    min-height: 100%;
    background-color: #f5f8fa;
}
/*个人信息*/
.user {
  position: relative;
	display: flex;
	flex-direction: row;
	align-items: center;
  width: 100%;
  padding: 30rpx 26rpx;
}

/*头像*/
.user .avatar {
	width: 130rpx;
	height: 130rpx;
	border-radius: 50%;
  border: 4rpx solid #fff;
  margin: 2rpx;
}
.user .m-user-left{
    padding: 14rpx;
    border: 4rpx solid rgba(255, 255, 255, .3);
    border-radius: 50%;
    width: 140rpx;
    height: 140rpx;
}

/*昵称*/
.user .m-user-right{
    width: 100000px;
    padding-left: 28rpx;
    color: #fff;
}
.user .user_name {
	color: white;
	font-size: 32rpx;
}
.user .user_phone {
	color: white;
	font-size: 28rpx;
}


/*.个人信息*/

/*账户信息*/
.account {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	margin-top: 20rpx;
	background: white;
}

/*每一项*/
.account .item {
	display: flex;
	flex-direction: column;
	text-align: center;
	margin-left: 0;
	flex: 1;
	border-right: 1px solid #eee;
}

.account .item:last-child {
	border-right: 0;
}


/*after通用样式*/
.account .item .value:after {
	font-size: 12px;
	margin-left: 5px;
}

/*标签*/
.account .item .caption {
	margin-top: -10px;
	color: #666;
	font-size: 14px;
}
/*.账户信息*/

/*通用列表*/
.listview {
	margin-top: 10px;
  position: relative;
  z-index: 88;
  width: 100%;
  min-height: 6rem;
}

/*列表项*/
.listview .item {
	background: white;
	display: flex;
	flex-direction: row;
	align-items: center;
	position: relative;
	margin-left: 0;
	height: 80rpx;
}

/*箭头*/
.user:after {
	content: " ";
	height: 16rpx;
	width: 16rpx;
	border-width: 2px 2px 0 0;
	border-color: #fff;
	border-style: solid;
	transform:rotate(45deg);
	position: absolute;
	margin-top: -4px;
	right:96rpx;
  top:110rpx;
}

.listview .item:after {
	content: " ";
	height: 8px;
	width: 8px;
	border-width: 2px 2px 0 0;
	border-color: #ccc;
	border-style: solid;
	transform:rotate(45deg);
	position: absolute;
	margin-top: -4px;
	top: 50%;
	right: 22px;
}

.listview .item .hd {
	width: 25px;
	height: 25px;
	margin: 5px 0;
	padding-left: 20px;
}

.listview .item .bd {
	font-size: 0.86rem;
	margin-left: 10px;
	flex: 1;
  height: 25px;
  line-height: 25px;
}
/*.通用列表*/

/*退出登录*/
.logout {
	background: white;
	padding: 2px 0;
	margin-top: 20px;
	margin-bottom: 20px;
	color: #f23030;
	text-align: center;
	font-size: 18px;
	line-height: 220%;
}
