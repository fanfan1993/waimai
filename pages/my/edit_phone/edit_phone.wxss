/* pages/my/edit_phone/edit_phone.wxss */

/*地址添加*/

page {
  min-height: 100%;
  background-color: #f5f8fa;
  font-size: 0.7rem;
}

/* 有效 手机号*/
.u-title-box {
  padding: 0 0.6rem;
  height: 1.98rem;
  font-size: 0.7rem;
  line-height: 1.98rem;
  background-color: #f5f8fa;
  overflow: hidden;
}

/*确认按钮*/
.confirm {
  background: #179ff4;
  color: white;
  margin: 10px;
  flex: 1;
  font-size: 0.75rem;
}

.buttons {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 2.94rem;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9;
  background-color: #fff;
}

/*每一项*/

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 5px 10px;
  border-bottom: 1px solid #ddd;
  background: white;
  margin-left: 0;
  line-height: 40px;
}

/*联系人列特殊处理*/

.group-item {
  align-items: flex-start;
}

.group-item .caption {
  margin-top: 5px;
}

/*input输入控件*/

.item .input-container {
  border-bottom: 1px solid #eee;
  margin: 5px 0;
  padding: 5px 0;
}

.item .input-container:last-child {
  border-bottom: 0;
}

.item .input-container-radio {
  margin: 0;
  padding: 0;
}

/*左侧标签*/

.item .caption {
  width: 20%;
}

/*主体内容*/

.item .bd {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.btn-get-code {
  position: absolute;
  top: 50%;
  right: 0;
  width: 5rem;
  padding: 0;
  text-align: center;
  z-index: 5;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  color: #475669;
  background-color: transparent;
  border: 1px solid #eee;
  border-radius: 1.38rem;
  height: 1.38rem;
  font-size: 0.72rem;
  line-height: 1.38rem;
}
